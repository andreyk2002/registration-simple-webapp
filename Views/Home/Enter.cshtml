@using registration_simple_webapp.Models.ViewModels
<!--model List<CheckboxModel>-->
@model CheckboxListModel
@{
    Layout = "_Layout";
}

<h2> All registred users</h2>
<form asp-controller="Home" asp-anti-forgery="true">
    <div class="toolbar mb-3" role="toolbar">
        <div class="btn-group mr-2" role="group">
            <button type="submit" class="btn btn-secondary" asp-action="Block">Block</button>
            <button type="submit" class="btn btn-secondary" asp-action="Unblock">Unblock</button>
            <button type="submit" class="btn btn-secondary" asp-action="Delete">Delete</button>
        </div>
    </div>
    <table id="data-table" class="table table-striped table-bordered nowrap" width="80%">
        <thead>
            <tr>
                <th><input name="select_all" value="1" type="checkbox"> Select/Diselect all</th>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Registration date</th>
                <th>Last Login date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Selected.Count; i++)
                {
                    <tr>
                        <td><input type="checkbox" asp-for="Selected[i]" /></td>
                        <td>@ViewBag.Items[i].Id.ToString()</td>
                        <td>@ViewBag.Items[i].Name</td>
                        <td>@ViewBag.Items[i].Email</td>
                        <td>@ViewBag.Items[i].RegistrationDate.ToString()</td>
                        <td>@ViewBag.Items[i].LastLoginDate.ToString()</td>
                        <td>@ViewBag.Items[i].Status</td>
                    </tr>

                }
            }
        </tbody>
    </table>
</form>
<script src="~/js/selectAll.js" asp-append-version="true"></script>

